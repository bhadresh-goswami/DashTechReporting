                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationMaster.LocationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleMaster.RoleTitle)
                        </td>
                        <td>
                            @*<button class="btn btn-primary" onclick="Show(@item.UserId)">Edit</button>*@
                            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) @*
        @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.UserId })*@
                        </td>
                    </tr>
                }

